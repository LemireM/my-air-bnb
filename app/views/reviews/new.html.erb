<h1>New Review for <%= @property.title %></h1>

<%= form_with model: [@property, @review] do |form| %>
  <div>
    <%= form.label :rating %>
    <%= form.number_field :rating %>
  </div>

  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.submit 'Submit Review' %>
  </div>
<% end %>

<%= link_to 'Back to Property', property_path(@property) %>
