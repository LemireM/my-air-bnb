<h1>New Booking for <%= @property.title %></h1>

<%= form_with model: [@property, @booking] do |form| %>
  <div>
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.label :total_price %>
    <%= form.number_field :total_price %>
  </div>

  <div>
    <%= form.submit 'Create Booking' %>
  </div>
<% end %>

<%= link_to 'Back to Property', property_path(@property) %>
